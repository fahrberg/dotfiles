{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": [
                "terraform"
            ],
            "initializationOptions": {}
        }
    },

    // rust
    "rust-analyzer.enableCargoWatchOnStartup": "enabled",

    // go
    "go.goplsPath": "gopls",
    "go.goplsOptions": {
        "hoverKind": "FullDocumentation",
        "completeUnimported": true
    }
}

{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": [
                "terraform"
            ],
            "initializationOptions": {}
        }
    },
    // rust
    "rust-analyzer.enableCargoWatchOnStartup": "enabled"
}
